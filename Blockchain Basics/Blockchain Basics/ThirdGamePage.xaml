<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Blockchain_Basics.ThirdGamePage"
             Title="Угадай крипту">
    <ScrollView>
        <StackLayout>
            <Frame BackgroundColor="White" Padding="16" CornerRadius="25" Margin="50, 10, 50, 10">
                <Label Text="Что это за логотип?" TextColor="#1c9af5" FontSize="Large" HorizontalTextAlignment="Center">
                </Label>
            </Frame>
            <Frame x:Name="questImageFrame" BackgroundColor="#ffffff" Padding="16" WidthRequest="100" HeightRequest="150" Margin="30, 0, 30, 0" CornerRadius="25">
                <Image x:Name="questImage" Source="bitcoin1.png">
                </Image>
            </Frame>
            <Button x:Name="button1" BackgroundColor="#2F9BDF" FontSize="Large" Margin="50, 30, 50, 0" CornerRadius="25" Text="ethereum" FontAttributes="Bold" TextColor="White">
            </Button>
            <Button x:Name="button2" BackgroundColor="#2F9BDF" FontSize="Large" Margin="50, 30, 50, 0" CornerRadius="25" Text="не шарю" FontAttributes="Bold" TextColor="White">
            </Button>
            <Button x:Name="button3" BackgroundColor="#2F9BDF" FontSize="Large" Margin="50, 30, 50, 0" CornerRadius="25" Text="не шарю" FontAttributes="Bold" TextColor="White">
            </Button>
        </StackLayout>
    </ScrollView>
</ContentPage>
