    <ContentPage Title="Игры" IconImageSource="{OnPlatform iOS=games.svg, Android=games}">
        <StackLayout BackgroundColor="#f6f7f9">
            <Frame BackgroundColor="#2F9BDF">
                <Label Text="Игровой центр" FontSize="Large" 
                       TextColor="White" FontAttributes="Bold">
                </Label>
            </Frame>
            <Grid HorizontalOptions="Center" HeightRequest="725" Margin="0, 20, 0, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="170" />
                    <ColumnDefinition Width="170" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="170" />
                    <RowDefinition Height="170" />
                </Grid.RowDefinitions>
                <ImageButton x:Name="button_game_1" Grid.Row="0" Grid.Column="0" 
                         Source="game1.png" BackgroundColor="White" Margin="5" CornerRadius="30">
                </ImageButton>
                <ImageButton x:Name="button_game_2" Grid.Row="0" Grid.Column="1"
                         Source="game2.png" BackgroundColor="White" Margin="5" CornerRadius="30">
                </ImageButton>
                <ImageButton x:Name="button_game_3" Grid.Row="1" Grid.Column="0"
                         Source="game3.png" BackgroundColor="White" Margin="5" CornerRadius="30">
                </ImageButton>
                <ImageButton x:Name="button_game_4" Grid.Row="1" Grid.Column="1"
                         Source="game4.png" BackgroundColor="White" Margin="5" CornerRadius="30">
                </ImageButton>
            </Grid>
        </StackLayout>
    </ContentPage>
</TabbedPage>
