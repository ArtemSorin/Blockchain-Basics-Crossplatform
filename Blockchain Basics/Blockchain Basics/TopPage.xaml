                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Label x:Name="label_name1" Grid.Row="0" Text="wrw" TextColor="Black" FontAttributes="Bold"></Label>
                            <Label Margin="-2" x:Name="label_score1" Grid.Row="1" Text="✦"></Label>
                        </Grid>
                        <ImageButton x:Name="price1" Grid.Column="2"  HeightRequest="40" WidthRequest="60" HorizontalOptions="End"></ImageButton>
                    </Grid>
                </Frame>
