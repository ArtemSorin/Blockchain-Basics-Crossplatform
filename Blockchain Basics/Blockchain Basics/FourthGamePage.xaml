<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Blockchain_Basics.FourthGamePage">
    <NavigationPage.TitleView>
        <StackLayout>
            <Label Text="Крипто ферма" HorizontalTextAlignment="Center" Margin="0, 0, 75, 0"
                   FontSize="Medium" FontAttributes="Bold" TextColor="White"/>
        </StackLayout>
    </NavigationPage.TitleView>
    <StackLayout>
        <Image Source="gpu.png" HorizontalOptions="Center"></Image>
        <Label x:Name="pos" Text="Процесс остановлен" HorizontalOptions="Center" FontSize="Medium" Margin="0, 20, 0, 20"></Label>
        <Label x:Name="hashlabel" Text="0" HorizontalOptions="Center" FontSize="Medium" Margin="20, 0, 20, 0"></Label>
        <Button x:Name="startorstop" Text="" HorizontalOptions="Center" HeightRequest="50" WidthRequest="100"
                Margin="60, 20, 60, 0" CornerRadius="30" TextColor="White">
        </Button>
        <Button x:Name="main" Text="Собрать" HorizontalOptions="Center" HeightRequest="50" WidthRequest="100"
                Margin="60, 20, 60, 0" CornerRadius="30" TextColor="White">
        </Button>
    </StackLayout>
</ContentPage>